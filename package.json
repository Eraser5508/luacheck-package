{
	"name": "luacheck",
	"displayName": "luacheck",
	"description": "luacheck",
	"version": "1.0.0",
	"publisher": "jinshenzhe",
	"engines": {
		"vscode": "^1.5.0"
	},
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/src/extension",

	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Luacheck for ACM Configuration",
			"properties": {
				"luacheck.useLuacheck": {
					"type": "boolean",
					"default": true,
					"description": "If true use luacheck. Otherwise syntax error check only."
				},
				"luacheck.maxNumberOfReports": {
					"type": "number",
					"default": 100,
					"description": "Maximum number of code check reports."
				}
			}
		}
	},
	"icon": "icon.png"
}